<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:behaviorPages="clr-namespace:DXMauiApp.Services"
             Title="{Binding Title}"
             IconImageSource="grid"
             x:Class= "DXMauiApp.Views.UnlockPage">
    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="Center" >

            <Image
                Source="{Binding ImageUrl}"
                SemanticProperties.Description="Door"
                HeightRequest="300"
                HorizontalOptions="Center"
                Scale="{Binding Scale}"
                x:Name="doorImage">
            </Image>

            <Label
                Text="{Binding ImageDescription}"
                HorizontalOptions="Center"
                Margin="20">
                
            </Label>

            <Button
                Margin="20"
                Text="Unlock door"
                Command="{Binding UnlockCommand}"
                IsEnabled="{Binding ButtonState}">

            </Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>